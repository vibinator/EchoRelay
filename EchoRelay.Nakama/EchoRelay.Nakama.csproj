  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EchoRelay.Core\EchoRelay.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Nakama">
      <HintPath>..\common\Nakama.dll</HintPath>
